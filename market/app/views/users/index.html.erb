<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead align="center">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>DOB</th>
      <th>Street Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Cart</th>
      <th>Wishlist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td align="center"><%= user.name %></td>
        <td align="center"><%= user.email %></td>
        <td align="center"><%= user.phone %></td>
        <td align="center"><%= user.dob %></td>
        <td align="center"><%= user.street_address %></td>
        <td align="center"><%= user.city %></td>
        <td align="center"><%= user.state %></td>
        <td align="center"><%= user.zip %></td>
        <td align="center"><%= user.cart %></td>
        <td align="center"><%= user.wishlist %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if !user.admin? and user_signed_in? and current_user.admin? %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Credit Cards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Card name</th>
      <th>Card num</th>
      <th>Card experation</th>
      <th>Card cvv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.user_id %></td>
        <td><%= credit_card.card_name %></td>
        <td><%= credit_card.card_num %></td>
        <td><%= credit_card.card_experation %></td>
        <td><%= credit_card.card_cvv %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Card', new_credit_card_path %>

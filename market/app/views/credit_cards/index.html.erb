<p id="notice"><%= notice %></p>

<h1>Credit Cards</h1>

<table>
  <thead align="center">
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Expiration</th>
      <th>CVV</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.select{|card| card.user_id.equal?(current_user.id)}.each do |credit_card| %>
      <tr>
        <td align="center"><%= credit_card.card_name %></td>
        <td align="center"><%= credit_card.card_num %></td>
        <td align="center"><%= credit_card.card_experation %></td>
        <td align="center"><%= credit_card.card_cvv %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Card', new_credit_card_path %>

<p id="notice"><%= notice %></p>

<h1>Purchase Histories</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>User Name</th>
      <th>User Email</th>
      <th>Item Name</th>
      <th>Item ID</th>
      <th>Quantity</th>
      <th>Status</th>
      <th>Purchase Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_histories.each do |purchase_history| %>
      <tr>
        <td><%= User.find(purchase_history.user_id).name %></td>
        <td><%= User.find(purchase_history.user_id).email %></td>
        <td><%= Item.find(purchase_history.item_id).name %></td>
        <td><%= purchase_history.item_id %></td>
        <td><%= purchase_history.quantity %></td>
        <td><%= purchase_history.status %></td>
        <td><%= purchase_history.created_at %></td>
        <td><%= link_to 'Show', purchase_history %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

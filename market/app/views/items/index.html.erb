<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Unique</th>
      <th>Name</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Description</th>
      <th>Image</th>
      <th>Special item</th>
      <th>Age restricted</th>
      <th>Quantity</th>
      <th>Cost</th>
      <th>Tax slab</th>
      <th>Views count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.unique_id %></td>
        <td><%= item.name %></td>
        <td><%= item.brand %></td>
        <td><%= item.category %></td>
        <td><%= item.description %></td>
        <td><%= item.image %></td>
        <td><%= item.special_item %></td>
        <td><%= item.age_restricted %></td>
        <td><%= item.quantity %></td>
        <td><%= item.cost %></td>
        <td><%= item.tax_slab %></td>
        <td><%= item.views_count %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
